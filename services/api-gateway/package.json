{
  "name": "@sharklearning/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for SharkLearning microservices",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --testPathPattern=gateway.test.js",
    "test:unit": "NODE_ENV=test jest --testPathPattern=gateway.test.js",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration.test.js --runInBand",
    "test:all": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "http-proxy-middleware": "^2.0.6",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/tests/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/tests/**/*.test.js"]
  }
} 